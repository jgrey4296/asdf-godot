#!/usr/bin/env bash
# https://asdf-vm.com/plugins/create.html#bin-download
# # Download a specified version
# must download to ASDF_DOWNLOAD_PATH
# on failure, clean download path

set -euo pipefail

uname_s=$(uname)
arch=$(uname -m)
case "$uname_s" in
    Linux)
        sys_target="linux"
    ;;
    *) echo "OS Not Supported: $uname_s" ;;
esac

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "$ASDF_DOWNLOAD_PATH"

if [[ "${ASDF_GODOT_NO_MONO:-0}" -eq 1 ]]; then
    echo "* Downloading without C#"
    release_file="${TOOL_NAME}_v${ASDF_INSTALL_VERSION}_${sys_target}.${arch}.zip"
else
    echo "* Downloading with C#, pass ASDF_GODOT_NO_MONO=1 to disable c# installation"
    release_file="${TOOL_NAME}_v${ASDF_INSTALL_VERSION}_mono_${sys_target}_${arch}.zip"
fi

# Download tar.gz file to the download directory
if [[ ! -e "${ASDF_DOWNLOAD_PATH}/$release_file" ]]; then
	url="$GH_REPO/releases/download/${ASDF_INSTALL_VERSION}/${release_file}"
	echo "* Downloading $TOOL_NAME release $ASDF_INSTALL_VERSION..."
    # TODO use gh release download if available
	curl "${curl_opts[@]}" -o "${ASDF_DOWNLOAD_PATH}/$release_file" -C - "$url" || fail "Could not download $url"

fi

#  Extract contents of tar.gz file into the download directory
echo "* Extracting..."
unzip -o "${ASDF_DOWNLOAD_PATH}/"*.zip -d "$ASDF_DOWNLOAD_PATH" || fail "Could not extract $release_file"

# Remove the tar.gz file since we don't need to keep it
echo "* Cleaning up..."
rm "${ASDF_DOWNLOAD_PATH}/"*.zip
