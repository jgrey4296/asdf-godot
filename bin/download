#!/usr/bin/env bash
# https://asdf-vm.com/plugins/create.html#bin-download
# # Download a specified version
# must download to ASDF_DOWNLOAD_PATH
# on failure, clean download path

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "$ASDF_DOWNLOAD_PATH"

release_dir="$(gd-version-id)-stable"
release_file=$(gd-zip-file)
url="$GH_REPO/releases/download/${release_dir}/${release_file}"

# Download compressed file to the download directory
if [[ ! -e "${ASDF_DOWNLOAD_PATH}/$release_file" ]]; then
	echo "* Downloading $TOOL_NAME release $ASDF_INSTALL_VERSION..."
    # TODO use gh release download if available
	curl "${curl_opts[@]}" -o "${ASDF_DOWNLOAD_PATH}/$release_file" -C - "$url" || fail "Could not download $url"
fi

# Extract contents of compressed file into the download directory
echo "* Extracting..."
unzip -o "${ASDF_DOWNLOAD_PATH}/${release_file}" -d "$ASDF_DOWNLOAD_PATH" || fail "Could not extract $release_file"

# Remove the compressed file since we don't need to keep it
echo "* Cleaning up..."
rm "${ASDF_DOWNLOAD_PATH}/${release_file}"
